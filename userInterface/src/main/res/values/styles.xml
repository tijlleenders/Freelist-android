<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.PreferenceTheme" parent="AppTheme">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <style name="parent_item_textview" parent="TextAppearance.AppCompat.Large">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_alignParentStart">true</item>
    <item name="android:layout_toLeftOf">@id/text_view_duration</item>
    <item name="android:layout_toStartOf">@id/text_view_duration</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:text">Title</item>
  </style>

  <style name="multiple_item_textview" parent="TextAppearance.AppCompat.Large">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_alignParentStart">true</item>
    <item name="android:layout_toLeftOf">@id/text_view_duration</item>
    <item name="android:layout_toStartOf">@id/text_view_duration</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:text">Title</item>
  </style>

</resources>
