<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="nl.freelist.activities.NavigateFreelistActivity">

  <android.support.v7.widget.CardView
    android:id="@+id/breadcrumb_level_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/breadcrumb_level_0_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:text="Home"/>
  </android.support.v7.widget.CardView>

  <TextView
    android:id="@+id/breadcrumb_divider_0_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:text=">"
    app:layout_constraintBottom_toBottomOf="@id/breadcrumb_level_1"
    app:layout_constraintEnd_toStartOf="@+id/breadcrumb_level_1"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/breadcrumb_level_0"
    app:layout_constraintTop_toTopOf="@id/breadcrumb_level_1"
    app:layout_constraintVertical_bias="0.0"/>

  <android.support.v7.widget.CardView
    android:id="@+id/breadcrumb_level_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="2dp"
    app:layout_constraintLeft_toRightOf="@id/breadcrumb_divider_0_1"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/breadcrumb_level_1_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:text="breadcrumb_1"/>
  </android.support.v7.widget.CardView>

  <TextView
    android:id="@+id/breadcrumb_divider_1_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="@id/breadcrumb_level_2"
    app:layout_constraintEnd_toStartOf="@+id/breadcrumb_level_2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/breadcrumb_level_1"
    app:layout_constraintTop_toTopOf="@id/breadcrumb_level_2"
    app:layout_constraintVertical_bias="0.0"/>

  <android.support.v7.widget.CardView
    android:id="@+id/breadcrumb_level_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="2dp"
    app:layout_constraintLeft_toRightOf="@id/breadcrumb_divider_1_2"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/breadcrumb_level_2_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:text="breadcrumb_2"/>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="2dp"
    app:layout_constrainedHeight="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/breadcrumb_level_0"
    app:layout_constraintVertical_bias="1.0"
    tools:listitem="@layout/main_entry_single"/>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/button_add_entry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:layout_marginBottom="16dp"

    android:layout_marginEnd="8dp"
    android:src="@drawable/ic_add"
    app:layout_constraintBottom_toBottomOf="@id/recycler_view"
    app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>